<!-- BEGIN BODY -->
<body class="body-blank">
<!-- BEGIN WRAP CONTAINER-FLUID -->
<section class="container-fluid">
    <!-- BEGIN HEADER -->
    <!-- END HEADER -->
    <!-- BEGIN MAIN PAGE-CONTENT -->
    <main>
        <!-- BEGIN CONTENT -->
     <article style="height: 100%;" class="row">
            <div style="height:100%" class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                <div class="vert-centre">
                    <div class="panel panel-silver shadow-box">
                        <div class="panel-heading">
                            <h2 class="panel-title"><i class="fa fa-lg fa-user text-silver"></i>Login Form</h2>
                        </div>
                        <div class="panel-body">
                            <form action="/login" method="post" data-toggle="validator" autocomplete="off" class="form-styled">
                                <div class="form-group has-feedback">
                                    <label for="un">Email</label>
                                    <input type="Email" id="un" name="username" required  class="form-control" autofocus><span aria-hidden="true" class="glyphicon form-control-feedback"></span><span class="help-block with-errors"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="pw">Password</label>
                                    <input type="password" id="pw" name="password"  maxlength="20" required placeholder="" data-error="Must be at least 6 characters" class="form-control"><span aria-hidden="true" class="glyphicon form-control-feedback"></span><span class="help-block with-errors"></span>
                                </div>
                  
                                <button type="submit" class="btn btn-outline btn-default btn-xs-100 pull-left text-grey"><i class="fa fa-lg fa-sign-in"></i>&nbsp; Sign In</button><a href="/reset" role="button" class="btn btn-outline btn-default btn-xs-100 pull-right text-grey"><i class="fa fa-lg fa-refresh"></i>&nbsp; Reset Password</a>
                                <br>
                                <br>
                                
                                <a href="/signup" role="button" class="btn btn-outline btn-default btn-xs-100 pull-right text-grey"><i class="fa fa-lg fa-user-plus"></i>&nbsp; Sign Up</a>
                            </form>
                            <br>
                            <br>
                            <br>
                            
                                                    {% if message %}
                        <div role="alert" class="alert alert-warning alert-icon"><b>{{message}}</b></div>
                        {% endif%}
                                                   
                        </div>

                    </div>
                </div>
            </div>
        </article>
        <!-- END CONTENT -->
    </main>
</section>
<!-- BEGIN SCRIPTS -->
<script src="../js/layout.min.js"></script>
<!-- END SCRIPTS -->
</body>
